{
  "lsp": {
    "rust-analyzer": {
      "initialization_options": {
        "cargo": {
          "allTargets": false,
          "target": "xtensa-esp32s3-none-elf",
          "buildScripts": {
            "useRustcWrapper": false
          }
        },
        "check": {
          "command": "check",
          "invocationLocation": "root",
          "invocationStrategy": "once",
          "overrideCommand": [
            "nix",
            "develop",
            "--command",
            "cargo",
            "check",
            "--message-format=json"
          ]
        },
        "rustfmt": {
          "overrideCommand": [
            "nix",
            "develop",
            "--command",
            "rustfmt",
            "--edition",
            "2021"
          ]
        }
      }
    }
  }
}
